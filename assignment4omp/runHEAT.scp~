#!/bin/bash
#@ wall_clock_limit = 00:20:00
#@ job_name = heat
#@ job_type = parallel
#@ class = test
#@ output = job4.out
#@ error = job4.out
#@ node=1
##@ total_tasks=1
##@ task_geometry = {(0,2) (1,3)}
#@ tasks_per_node = 1
#@ network.mpi = sn_all,not_shared,us
#@ node_usage = not_shared
#@ energy_policy_tag = NONE
#@ queue

. /etc/profile

export OMP_NUM_THREADS=1
for i in {1..10}
do
    echo run$i...
    heat test.dat
    echo ''
done

